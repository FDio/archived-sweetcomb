module sc-interface-set-flags {
	yang-version 1;
    namespace "urn:sweetcomb:params:xml:ns:yang:vpp:interface:set-flags";
    prefix "sc-interface-set-flags";
	
	import ietf-inet-types {
        prefix "inet";
    }

    organization "HUACHENTEL";

    description
    "This module contains a collection of YANG definitions for
     managing interface flags in VPP.

